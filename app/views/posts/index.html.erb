<% content_for :title, "Tous les posts" %>

<% if notice %>
<div class="alert alert-success text-center">
    <%= notice %>
</div>
<% end %>
<div class="mb-5">
    <div class="position-relative text-white text-center">
        <img src="https://picsum.photos/1200/300?random=<%= rand(1000) %>" class="img-fluid w-100" style="object-fit: cover; height: 300px;" alt="Bannière aléatoire">

        <div class="position-absolute top-50 start-50 translate-middle">
            <h1 class="display-4 fw-bold text-shadow">Bienvenue sur Fakebook</h1>
            <p class="lead text-light">Découvrez les derniers posts des utilisateurs</p>
            <%= link_to "➕ Nouveau post", new_post_path, class: "btn btn-lg btn-primary mt-2" %>
        </div>
    </div>
</div>

<div class="row">
    <% @posts.each do |post| %>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <% if post.media.attached? %>
            <%= image_tag post.media.first, class: "card-img-top", style: "object-fit: cover; height: 200px;" %>
            <% end %>
            <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= truncate(post.content, length: 100) %></p>
            </div>
        </div>
    </div>
    <% end %>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Galerie inspirante</h2>
    <div class="row g-3">
        <% 3.times do |i| %>
        <div class="col-12 col-md-4">
            <img src="https://picsum.photos/seed/<%= rand(1000) %>/<%= [300, 400, 500].sample %>/<%= [200, 300].sample %>" class="img-fluid rounded shadow-sm" alt="Picsum random <%= i %>">
        </div>
        <% end %>
    </div>
</div>