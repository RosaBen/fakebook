<% content_for :title, "Tous les posts" %>

<% if notice %>
<div class="alert alert-success text-center">
    <%= notice %>
</div>
<% end %>

<!-- Bandeau avec image dynamique de Picsum -->
<div class="mb-5">
    <div class="position-relative text-white text-center">
        <img src="https://picsum.photos/1200/300?random=<%= rand(1000) %>" class="img-fluid w-100" style="object-fit: cover; height: 300px;" alt="Bannière aléatoire">

        <div class="position-absolute top-50 start-50 translate-middle">
            <h1 class="display-4 fw-bold text-shadow">Bienvenue sur Fakebook</h1>
            <p class="lead text-light">Découvrez les derniers posts des utilisateurs</p>
            <%= link_to "➕ Nouveau post", new_post_path, class: "btn btn-lg btn-primary mt-2" %>
        </div>
    </div>
</div>

<!-- Liste des posts -->
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4">
        <% @posts.each do |post| %>
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <% if post.media.attached? %>
                <%= image_tag post.media.first.variant(resize_to_limit: [600, 300]), class: "card-img-top", loading: "lazy" if post.media.first.image? %>
                <% end %>

                <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text"><%= truncate(post.description, length: 100) %></p>
                    <%= link_to "Voir ce post", post_path(post), class: "btn btn-outline-primary btn-sm" %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Galerie inspirante</h2>
    <div class="row g-3">
        <% 6.times do |i| %>
        <div class="col-12 col-md-4">
            <img src="https://picsum.photos/seed/<%= rand(1000) %>/<%= [300, 400, 500].sample %>/<%= [200, 300].sample %>" class="img-fluid rounded shadow-sm" alt="Picsum random <%= i %>">
        </div>
        <% end %>
    </div>
</div>